{
	"info": {
		"_postman_id": "cf79d06c-704e-443c-b0e6-79b63fe150d7",
		"name": "Test simple server",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Check server works",
			"item": [
				{
					"name": "check the main request",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"C1 Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"C1 Check body contains correct data\", function () {",
									"    const body = pm.response.json()",
									"    const testName = pm.iterationData.get(\"value\") ?? \"Noname\"",
									"    pm.expect(body.message).equals(\"Hello, \" + testName)",
									"});"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"const testName = pm.iterationData.get(\"value\") ?? \"Noname\"",
									"pm.environment.set(\"testName\", testName)"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"{{testName}}\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{host}}/api",
							"host": [
								"{{host}}"
							],
							"path": [
								"api"
							]
						}
					},
					"response": []
				}
			]
		}
	]
}